@page "/Companies"

@using HR_SYSTEM.Services

@using System.Collections.Generic;


<button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#exampleModal">
    Add Company
</button>


<h1>  Companies </h1>
@if (Compob is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Landline Number</th>
                <th>Location</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comp in Compob as List<HR_SYSTEM.Models.Company>)
            {
                <tr>
                    <td>@comp.Name</td>
                    <td>@comp.LandlineNo</td>
                    <td>@comp.Address </td>
                    <td>
                        <span>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" @onclick="()=>UpdateCompany(comp.CompanyRegNo)">  Edit </button>
                            <button type="button" class="btn btn-danger" @onclick="()=>DeleteCompany(comp.CompanyRegNo)">  Delete </button>
                        </span>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@(addcompanydata.CompanyRegNo==0?"Add New Company":"Edit Company")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="Name" class="control-label">Company Name</label>
                                <input form="Name" class="form-control" @bind="@addcompanydata.Name" />
                            </div>
                            <div class="form-group">
                                <label for="LandlineNumber" class="control-label">LandlineNumber</label>
                                <input form="LandlineNumber" class="form-control" @bind="@addcompanydata.LandlineNo" />
                            </div>
                            <div class="form-group">
                                <label for="Address" class="control-label">Address</label>
                                <input form="Address" class="form-control" @bind="@addcompanydata.Address" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="button" class="btn btn-primary" @onclick="@CreateCompany" value="Save" />

                                <input type="button" class="btn btn-primary float-md-right" @onclick="@Cancel" data-dismiss="modal" value="Cancel" />
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
